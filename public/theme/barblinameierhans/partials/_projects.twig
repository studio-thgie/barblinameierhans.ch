{% for project in projects %}
    <div class="w-full md:flex mb-8 md:mb-12 xl:mb-16">
        <div class="md:pr-5 xl:pr-16 md:w-1/2">
            {% if loop.index % 2 %}
                {% include 'partials/_page-content.twig' with {'page': project} %}
            {% else %}
                {% include 'partials/_page-image.twig' with {'page': project} %}
            {% endif %}
        </div>
        <div class="md:pl-5 xl:pl-16 md:w-1/2">
            {% if loop.index % 2 %}
                {% include 'partials/_page-image.twig' with {'page': project} %}
            {% else %}
                {% include 'partials/_page-content.twig' with {'page': project} %}
            {% endif %}
        </div>
    </div>
{% endfor %}