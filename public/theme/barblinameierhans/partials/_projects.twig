    <div class="w-full md:flex mb-8 md:mb-12 xl:mb-16">
        <div class="md:pr-5 xl:pr-16 md:w-1/2">
            <ul>
            {% for project in projects %}
                <li>
                    <div class="block md:inline-block relative">
                        <a href="{{ project|link }}">
                            {% include 'partials/_sub-nav-item.twig' with { 'item': project } %}
                        </a>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
        <div class="md:pl-5 xl:pl-16 md:w-1/2">
            {% set break = false %}
            {% for project in projects|shuffle if not break %}
                {% if project.gallery %}
                    {% set break = true %}
                    {% set image = project.gallery|shuffle|first %}
                    <img src="{{ image|thumbnail(1200) }}">
                {% endif %}
            {% endfor %}
        </div>
    </div>