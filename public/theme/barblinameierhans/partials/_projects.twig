    <div class="w-full md:flex mb-8 md:mb-12 xl:mb-16">
        <div class="md:pr-5 xl:pr-16 md:w-1/2">
            {% for project in projects %}
                <a href="{{ project|link }}">
                    {% include 'partials/_sub-nav-item.twig' with { 'item': project } %}
                </a>
            {% endfor %}
        </div>
        <div class="md:pl-5 xl:pl-16 md:w-1/2">
            {% if projects|first is not empty %}
                {% set project = projects|first %}
                {% if project.image is not empty %}
                    {% include 'partials/_page-image.twig' with {'page': projects|first} %}
                {% endif %}
            {% endif %}
        </div>
    </div>