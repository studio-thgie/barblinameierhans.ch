{% if page.title != '' %}
<h2 class="text-3xl md:text-5xl xl:text-6xl">{{ page.title }}</h2>
{% endif %}
{% if page.subtitle != '' %}
<h3 class="text-2xl md:text-3xl xl:text-4xl mt-3 mb-20">{{ page.subtitle }}</h3>
{% endif %}
{% if page.body != '' %}
<div class="text-base md:text-xl xl:text-3xl mb-5">
    {{ page.body }}
</div>
{% endif %}


{% if page.gallery %}
<div id="gallery" class="text-base md:text-xl xl:text-3xl mb-5">
    <div class="swiper swiper-gallery">
      <div class="swiper-wrapper">
        {% for image in record.gallery %}
            {{ image|popup() }}
            <div class="swiper-slide">
                <img src="{{ image|thumbnail(1200) }}" alt="{{ image.alt|default(page|title) }}">
            </div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-pagination"></div>
    </div>
</div>
<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        var swiper = new Swiper(".swiper-gallery", {
            slidesPerView: 1,
            loop: true,
            autoHeight: true,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    });
</script>
{% endif %}

{% if page.video %}
<div id="video" class="text-base md:text-xl xl:text-3xl mb-5">
    <div class="relative" style="padding-top: 56.25%">
        {{ page.video.html|raw }}
    </div>
</div>
{% endif %}