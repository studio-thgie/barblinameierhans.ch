{% extends 'partials/_main.twig' %}

{% block header %}{% endblock header %}

{% block body %}

<div class="fixed top-0 left-0 w-screen h-screen bg-white flex flex-wrap content-center justify-around"
    x-data="{ intro: true }" x-show="intro" x-transition x-init="setTimeout(() => { intro = false; }, 1000)">
    <span class="text-4xl sm:text-6xl lg:text-8xl">barblina meierhans</span>
</div>

<div>
    <span class="text-3xl md:text-5xl lg:text-8xl">barblina meierhans</span>
    {% if record.image is not empty %}
        <img src="{{ page.image|thumbnail(1200) }}" alt="{{ page.image.alt|default(page|title) }}">
    {% endif %}
</div>

{% endblock body %}
